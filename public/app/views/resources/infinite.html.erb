<a name="main" title="<%= t('internal_links.main') %>"></a>

<div id="main-content" class="row">
  <div class="information col-sm-7">
    <%= render partial: 'shared/idbadge', locals: {:result => @result, :props => { :full => true} } %>
  </div>
  <div class="page_actions col-sm-5 right">
    <%= render partial: 'shared/page_actions', locals: {:record => @result, :title =>  @result.display_string, :url => request.fullpath, :cite => @result.cite } %>
  </div>
</div>

<div class="row">
  <%= render partial: 'shared/breadcrumbs' %>
</div>

<%= render partial: 'resources/resource_alltabs' %>

<%= javascript_include_tag 'treesync' %>
<%= javascript_include_tag 'infinite_scroll' %>
<%= javascript_include_tag 'largetree' %>
<%= javascript_include_tag 'tree_renderer' %>

<div class="row feed-container" id="tabs">
  <section class="col-sm-9">
    <nav class="infinite-record-context">
      <div class="dropdown">
        <a id="scrollContext" data-target="#" href="javascript:void(0)" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" aria-label="Navigate to record in feed">
          <%= @result.display_string %>
          <span class="caret"></span>
        </a>

        <ul class="dropdown-menu" aria-labelledby="scrollContext">
          <li><a href="#tree:resource_<%= @result.uri.match(/[0-9]+$/).to_s %>"><%= @result.display_string %></a></li>
          <% @result.top_level_records.each do |record| %>
            <li><a href="#tree:archival_object_<%= record['uri'].match(/[0-9]+$/).to_s %>"><%= record['title'] %></a></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="infinite-record-wrapper">
      <div id="collection-feed" class="infinite-record-container" role="feed" aria-label="<%= I18n.t('collection_feed') %>">
        <div class="root">
          <% waypoint_size = 20 %>
          <% @ordered_records.each_slice(waypoint_size).each_with_index do |refs, i| %>
            <div class="waypoint" data-waypoint-number="<%= i %>" data-waypoint-size=<%= waypoint_size %> data-uris="<%= refs.map {|r| r['ref']}.join(';') %>" data-collection-size="<%= @ordered_records.length %>">&nbsp;</div>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <div class="col-sm-3">
  </div>
</div>

